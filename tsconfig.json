{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "lib": ["ESNext"],
    "types": ["@cloudflare/workers-types"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "#database": ["src/database"],
      "#database/*": ["src/database/*"],
      "#handlers/*": ["src/handlers/*"],
      "#helpers/*": ["src/helpers/*"],
      "#routes/*": ["src/routes/*"]
    }
  },
  "typeRoots": ["./types"],
  "include": ["src/**/*.ts", "./types"]
}
